= simple_form_for [@store,@owner], remote: true do |f|
  .fields
    .seven.wide.field
      = f.input :name
    .three.wide.field
      = f.input :cpf, input_html: { class: 'cpf'}
    .three.wide.field
      = f.input :telephone, input_html: { class: 'telephone'}
    .three.wide.field
      = f.input :email, input_html: { class: 'email'}
  .field
    = f.button :submit, class: 'ui button blue', data: { disable_with: t(:disable_with)}
